{
    "plugins": [
        "bem-xjst"
    ],
    "env": {
        "node": true,
        "jasmine": true,
        "bem-xjst/bemhtml": true,
        "bem-xjst/bemtree": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": 0,
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}